<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tamu.gameified">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:name="tamu.gameified.Theme"
            android:label="@string/app_name" />
        <activity
            android:name="tamu.gameified.ChapterCollection"
            android:label="@string/title_activity_mission_board" />
        <activity
            android:name="tamu.gameified.TopicReview"
            android:label="@string/title_activity_topic_review" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="tamu.gameified.ThemeIntro"
            android:label="@string/title_activity_theme_intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tamu.gameified.MessagePrompt"
            android:label="@string/title_activity_message_prompt" />
        <activity
            android:name="tamu.gameified.MessageRecord"
            android:label="@string/title_activity_message_record" />
        <activity
            android:name="tamu.gameified.MessagePromptEnd"
            android:label="@string/title_activity_message_prompt_end" />
        <activity
            android:name=".MessageReview"
            android:label="@string/title_activity_message_review" />
        <activity
            android:name="tamu.gameified.LevelSelect"
            android:label="@string/title_activity_level_select" />
        <activity
            android:name="tamu.gameified.NewMainMenu"
            android:label="@string/title_activity_new_main_menu">
        </activity>
    </application>

</manifest>